{
  "extends": ["config:base"],
  "conda": {
    "enabled": true
  },
  "includePaths": ["environment.yml"],
  "schedule": ["weekly"],
  "prHourlyLimit": 1,
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore(deps): ",
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "ignoreDeps": ["python"]  // Optional: Ignore Python if you don't want major version bumps
}
